{
  "name": "test-electron-vite",
  "private": true,
  "version": "1.0.4",
  "description": "Electron app with Vite and React",
  "author": "CDSTASH",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development electron electron/main.js\"",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:electron:win": "npm run build && electron-builder --win",
    "build:electron:win:ci": "npm run build && electron-builder --win --config.asar=false --config.compression=store",
    "release:patch": "node scripts/version.js patch && electron-builder --win",
    "release:minor": "node scripts/version.js minor && electron-builder --win",
    "release:major": "node scripts/version.js major && electron-builder --win",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:prod": "cross-env NODE_ENV=production electron electron/main.js"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/electron": "^1.6.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.imamcorp.test-electron-vite",
    "productName": "Test Vite Electron",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "asar": false,
    "compression": "store",
    "publish": {
      "provider": "github",
      "owner": "imamknitto",
      "repo": "test-electron-vite",
      "releaseType": "draft"
    }
  }
}
